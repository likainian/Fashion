<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_orange"
        android:layout_alignTop="@+id/grid_title"
        android:layout_alignBottom="@+id/grid_title"
        android:src="@drawable/im_button_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@+id/iv_orange"
        android:text="热门推荐"
        android:layout_margin="5dp"
        android:id="@+id/grid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.fun.administrator.fashion.MyGridView
        android:layout_below="@+id/grid_title"
        android:id="@+id/grid_home"
        android:numColumns="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.fun.administrator.fashion.MyGridView>
</RelativeLayout>